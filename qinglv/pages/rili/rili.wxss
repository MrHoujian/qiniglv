/* pages/calendar/calendar.wxss */
page{
	font-family: "MicrosoftYaHei"
}
.canlendarBgView {
	position: fixed;
	top: 0;
	width: 100%;
	height:80rpx;
	background-color:#f5f5f5 
}

.canlendarView {
	color: #17b7b2;
	display: flex;
	flex-direction: column;
	width:100%
}

.canlendarTopView {
	height: 80rpx;
	font-size: 28rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

.leftBgView {
	text-align: right;
	height: 80rpx;
	display: flex;
	flex-direction: row-reverse;
}

.leftView {
	width: 80rpx;
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

.centerView {
	width: 100%;
	background-color: #fff;
	color: #777;
	padding: 20px;
	margin: 0;
	text-align: center;
	font-size: 15px;
	font-weight: bold;
}

.rightBgView {
	height: 80rpx;
	display: flex;
	flex-direction: row;
}

.rightView {
	width: 80rpx;
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

.weekBgView {
	height: 80rpx;
	line-height: 80rpx;
	opacity: 0.5;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.weekView {
	flex-grow: 1;
	text-align: center;
	font-size: 28rpx;
}

.dateBgView {
	/*  height: 500rpx;*/
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;

	background-color: #fff;
	margin-top:30rpx;
}

.dateEmptyView {
	width: 14%;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
}

.dateView {
	width: 14%;
	color: #fff;

}

.datesView,.jg,.yw {
	width: 100%;
	display: block;
	text-align: center;
	font-size: 30rpx;
	color: #777;
	font-weight: bold;
	margin-top: 2rpx;
}
.jg{
	color: #fff;
	background-color: #1296db;
	font-size: 24rpx
}
.yw{
	color: #fff;
	background-color: #f08f87;
	font-size: 24rpx
}
.k{
	height: 30rpx
}
.dateSelectView {
	left: 0;
	top: 0;
	color: #fff;
	background-color: #fff1c7;
}
.zi{
	color:#FF1919;
}
.huang{
	background-color: #FFF1C7
}
